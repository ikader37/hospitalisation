  <persistence-unit name="hospitalisationPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>entities.Lit</class>
    <class>entities.Etudiant</class>
    <class>entities.Hospitaliser</class>
    <class>entities.Filiere</class>
    <class>entities.Ordprod</class>
    <class>entities.Salle</class>
    <class>entities.Produit</class>
    <class>entities.Ordonnance</class>
    
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
      <property name="javax.persistence.jdbc.user" value="Gestionnaire"/>
      <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
      <property name="javax.persistence.jdbc.password" value="1234"/>
    </properties>
  </persistence-unit>
</persistence>
